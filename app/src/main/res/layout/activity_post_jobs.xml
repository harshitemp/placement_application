<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".PostJobs">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Top Navigation Bar with Logo and Image Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#3F51B5"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical">

            <!-- Logo -->
            <ImageView
                android:id="@+id/imgTpoLogo"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="TPO Logo"
                android:src="@drawable/logobg1"
                android:scaleType="fitCenter" />

            <!-- Spacer -->
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <!-- Dashboard Button -->
            <ImageButton
                android:id="@+id/btnDashboard"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@android:color/transparent"
                android:contentDescription="Dashboard"
                android:src="@drawable/ic_dashboard"
                android:padding="5dp"
                android:scaleType="fitCenter" />

            <!-- Job Applied Students Button -->
            <ImageButton
                android:id="@+id/btnJobAppliedStudents"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@android:color/transparent"
                android:contentDescription="Job Applied Students"
                android:src="@drawable/ic_apply_jobs"
                android:padding="5dp"
                android:scaleType="fitCenter" />

            <!-- Post Jobs Button -->
            <ImageButton
                android:id="@+id/btnPostJobs"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@android:color/transparent"
                android:contentDescription="Post Jobs"
                android:src="@drawable/ic_post_jobs"
                android:padding="5dp"
                android:scaleType="fitCenter" />
        </LinearLayout>

        <!-- Job Title -->
        <EditText
            android:id="@+id/etJobTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Job Title"
            android:textSize="16sp"
            android:inputType="text"
            android:layout_marginBottom="12dp" />

        <!-- Company Name -->
        <EditText
            android:id="@+id/etCompanyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Company Name"
            android:textSize="16sp"
            android:inputType="text"
            android:layout_marginBottom="12dp" />

        <!-- Job Description -->
        <EditText
            android:id="@+id/etJobDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Job Description"
            android:textSize="16sp"
            android:inputType="textMultiLine"
            android:minHeight="120dp"
            android:layout_marginBottom="12dp" />

        <!-- Location -->
        <EditText
            android:id="@+id/etJobLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Location"
            android:textSize="16sp"
            android:inputType="text"
            android:layout_marginBottom="12dp" />

        <!-- Salary -->
        <EditText
            android:id="@+id/etSalary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Salary (CTC)"
            android:textSize="16sp"
            android:inputType="number"
            android:layout_marginBottom="12dp" />

        <!-- Eligibility -->
        <EditText
            android:id="@+id/etEligibility"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Eligibility Criteria"
            android:textSize="16sp"
            android:inputType="text"
            android:layout_marginBottom="12dp" />

        <!-- Deadline -->
        <EditText
            android:id="@+id/etDeadline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Application Deadline (YYYY-MM-DD)"
            android:textSize="16sp"
            android:inputType="date"
            android:layout_marginBottom="12dp" />

        <!-- Submit Button -->
        <Button
            android:id="@+id/btnPostJob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Post Job"
            android:textSize="18sp"
            android:backgroundTint="@color/design_default_color_primary"
            android:textColor="@android:color/white"
            android:layout_marginTop="20dp" />

    </LinearLayout>
</ScrollView>